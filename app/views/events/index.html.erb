<h2>Upcoming Events</h2>

<table class="events">
  <thead>
    <tr>
      <th>Date</th>
      <th>Event</th>
      <th>Location</th>
    </tr>
  </thead>
  <body>
    <% @upcoming_events.each do |event| %>
      <tr>
        <td><%= event.date %></td>
        <td><%= link_to event.title, event_path(event) %></td>
        <td><%= event.location %></td>
      </tr>
    <% end %>
  </body>
</table>

